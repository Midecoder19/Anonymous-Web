{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/api/$1" }
    ],
    "builds": [
      { "src": "server/package.json", "use": "@vercel/node" },
      { "src": "client/package.json", "use": "@vercel/static-build" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/client/index.html" }
    ]
  }
  